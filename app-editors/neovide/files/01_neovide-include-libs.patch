Ensures that neovide has the libraries it needs.
https://www.reddit.com/r/rust/comments/nyjlhn/cxx_linking_errors_to_opengl_in_linux/

--- a/neovide/build.rs
+++ b/neovide/build.rs
@@ -5,5 +5,13 @@ fn main() {
         res.set_icon("assets/neovide.ico");
         res.compile().expect("Could not attach exe icon");
     }
+    println!("cargo:rustc-link-arg-bins=/usr/lib64/libexpat.so.1");
+    println!("cargo:rustc-link-arg-bins=/usr/lib64/libz.so.1");
+    println!("cargo:rustc-link-arg-bins=/usr/lib64/libpng16.so.16");
+    println!("cargo:rustc-link-arg-bins=/usr/lib64/libjpeg.so.62 ");
+    println!("cargo:rustc-link-args-bin=/usr/lib64/libwebp.so.7.1.5");
+    println!("cargo:rustc-link-arg-bins=/usr/lib64/libglut.so.3");
+    println!("cargo:rustc-link-arg-bins=/usr/lib64/libfontconfig.so.1");
+    println!("cargo:rustc-link-args-bin=/usr/lib64/libfreetype.so.6.19.0");
 }
